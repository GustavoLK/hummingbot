{
    "version": "0.2.0",   
    "configurations": [
        {
            "name": "Python: Hummingbot Local (Conda)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bin/hummingbot.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "/home/gustavo/anaconda3/envs/hummingbot/bin/python"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/home/gustavo/anaconda3/envs/hummingbot/bin/python"
        },
        {
            "name": "Python: Hummingbot Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        }
    ]
}